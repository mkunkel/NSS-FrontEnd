%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Inventory System
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Inventory System
  .row
    .small-2.columns
      %input#person.small.next{:type => "text", placeholder:'Full Name'}/
    .small-8.columns
      %input#address.small.next{:type => "text", placeholder:'Address'}/
    .small-2.columns
      %input#save.button.small.radius.next{:type => "button", value:'Save'}/

  .row
    .small-2.columns
      %input#name.small.textbox.next{:type => "text", :autofocus => true, placeholder:'Item Name'}/
    .small-1.columns
      %input#count.small.textbox.next{:type => "text", placeholder:'#'}/
    .small-1.columns
      %input#value.small.textbox.next{:type => "text", placeholder:'Value'}/
    .small-2.columns
      %input#room.small.textbox.next{:type => "text", placeholder:'Room'}/
    .small-2.columns
      %input#condition.small.textbox.next{:type => "text", placeholder:'Condition'}/
    .small-2.columns
      %input#date.small.textbox.next{:type => "text", placeholder:'Date'}/
    .small-2.columns
      %input#add.small.button.success.radius{:type => "button", value:'Add'}/
  .row
    #total.small-3.columns Total Cost:
    .small-10.columns
  .row
    .small-12.columns
      %table#items
        %tr
          %th Name
          %th Count
          %th Cost
          %th Room
          %th Condition
          %th Purchase Date
  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{:src => "https://cdn.firebase.com/v0/firebase.js"}
  %script{src: 'js/app/app.js'}
