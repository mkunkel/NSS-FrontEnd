extends ../template/layout
include ../mixins/form-helper

block content
  include ../template/errors
  .row
    .small-12.columns
      form(action='/songs', method='post')
        fieldset
          legend New Song
          .row
            mixin field(8, 'title', 'Title', null, null, true)
            mixin field(4, 'duration', 'Song Duration', null, 'in seconds')
            //- mixin field(4, 'genres', 'Genres', null, '(blues, rock, country)')
          .row
            mixin field(6, 'art', 'Song Image')
            mixin field(6, 'filename', 'File Name')
          .row
            .small-12.columns
              label(for='lyrics') Lyrics
                textarea#lyrics(name='lyrics')
          .row
            .small-12.columns
              each genre in genres
                input(type= 'checkbox', value= genre.id, name= 'genres')
                span= genre.name
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Song
