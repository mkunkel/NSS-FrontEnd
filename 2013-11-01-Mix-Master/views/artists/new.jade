extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      form(action='/artists', method='post')
        fieldset
          legend New Artist
          .row
            mixin field(6, 'name', 'Name', null, null, true)
            mixin field(2, 'web', 'Web Site')
            mixin field(4, 'art', 'Image')
          .row
            .small-12.columns
              each song in songs
                input(type='checkbox', value= song.id, name= 'songids')
                span= song.title
          .row
            .small-12.columns
              label(for='bio') Biography
                textarea#bio(name='bio')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/artists') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Artist
