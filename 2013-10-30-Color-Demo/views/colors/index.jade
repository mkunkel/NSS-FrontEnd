extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Home Page
      a.button.tiny.radius(href="/") Home

  table#colors
    thead: tr
      each color in colors
        th(style='width: #{100 / colors.length}%')= color
    tbody: tr
      each color in colors
        td.color(style= 'background-color: #{color};', data-color= color)