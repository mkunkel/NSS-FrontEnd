extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-6.columns
    .small-6.columns
      include authentication-form
  if userId
    .row
      .small-12.columns
        include todo-form
    .row
      .small-12.columns
        table#todos
          thead
            tr
              th Completed?
              th Title
              th Category
              th Due Date
          tbody
            each todo in todos
              tr
                td
                  input.completed(type='checkbox', value= todo._id, checked= todo.isComplete)
                td= todo.title
                td= todo.category
                td= todo.dueDate
