form#todo(action='/todos', method='POST')
  fieldset
    legend New Todo
    .row
      mixin field(4, 'title', 'Title')
      mixin field(4, 'dueDate', 'Due Date', null, 'mm/dd/yyyy')
      .small-4.columns
        select#prioritySelect(name='priority')
          option(selected= true, value= 'default') Select Priority
          each priority in priorities
            option(value= priority.id)= priority.name

    .row
      .small-2.small-offset-10.columns
        button.radius.success.tiny.expand(type='submit') Save
